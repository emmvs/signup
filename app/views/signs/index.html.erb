<p class="font-gamma">There are <%=@signs.count %> results for your search</p>

<div class="flex-container">
  <div class="signs-grid">
    <% @signs.each do |sign| %>
      <% if sign.video.attached? %>
        <div class="sign-card">
          <%= link_to sign_path(sign), class: "sign-card-link" do %>
          <h1 class="sign-title font-beta"><%=sign.title %> </h1>
          <p class="sign-description font-gamma"><%=sign.description %></p>
          <div class="video-sign-container">
            <%= cl_video_tag(sign.video.key, :controls=>false, :autoplay=>false, :loop=>true, :muted=>true, :width=>400, :height=>200, class:"video")%>
          </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
