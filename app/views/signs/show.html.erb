<!-- app/views/articles/show.html.erb -->

<div class="container-show">
  <h1><%= @sign.title %></h1>
  <p><%= @sign.description %></p>
    <div class="sign-video">
      <%= cl_video_tag(@sign.video.key, :controls=>false, :autoplay=>true, :loop=>true, :muted=>true, :width=>300, class:"video")%>
    </div>
    <div class="sign-button">
      <% if policy(@sign).edit? %>
        <%= link_to "Update", edit_sign_path(@sign), class:"btn btn-primary" %>
      <% end %>
      <% if policy(@sign).destroy? %>
        <%= link_to "Delete", sign_path(@sign), class:"btn btn-secondary", method: :delete, data: { confirm: "Do you really want to say bye bye?" } %>
      <% end %>
    </div>
</div>
