<!-- app/views/pages/home.html.erb -->
<%# ****** Banner ****** %>
<section class="banner" style="background-image: url(<%= image_path "sky.jpg" %>)">
<div class="language-bar">
  <div class="home__logo">
      <%= render 'pages/components/logohand-white'  %>
  </div>
  <%# ****** Sign Search ****** %>
  <div class="sign-searchbar">
    <%= form_tag signs_path, class: "searchbar", id:"home_searchbar", method: :get, html: { data: {search_signs_target: 'form'}}, autocomplete: "off" do %>
      <%= hidden_field_tag 'language', '', id: "language_hidden_field" %>
      <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find an amazing sign"
            %>
      <button type="submit" class="search-button">
        <%= image_tag "search.png", class: "search-image" %>
      </button>
    <% end %>
  </div>
  <%# ****** Flag Search ****** %>
  <div class="lang-search-wrap">
    <p class="search-bar-infos">Choose your language</p>
    <div data-controller="dropdown">
      <span class="dropmic" data-dropmic="1" role="navigation" data-dropdown-target="dropdowns"     >
        <button data-dropmic-btn class="flag-image" ><img src="https://cdn-icons-png.flaticon.com/512/3013/3013911.png" id="tl-chosen_flag" width="25" height="25"></button>
        <div class="dropmic-menu" aria-hidden="true">
          <li class="dropmic-menu__listItem" role="menuitem">
            <button class="dropmic-menu__listContent" value="english" onclick="updateTargetLangFlag(this.value)" tabindex="-1"><img id="english-img"  src="<%= image_path 'usa.png' %>" width="25" height="25"> American English</button>
            <button class="dropmic-menu__listContent" value="german" onclick="updateTargetLangFlag(this.value)" tabindex="-1"><img id="german-img" src="<%= image_path 'deutschland.png' %>" width="25" height="25"> German</button>
            <button class="dropmic-menu__listContent" value="french" onclick="updateTargetLangFlag(this.value)" tabindex="-1"><img id="french-img" src="<%= image_path 'france.png' %>" width="25" height="25"> French</button>
            <button class="dropmic-menu__listContent" value="swedish" onclick="updateTargetLangFlag(this.value)" tabindex="-1"><img id="swedish-img" src="<%= image_path 'sweden.png' %>" width="25" height="25"> Swedish</button>
          </li>
        </div>
      </span>
    </div>
  </div>
</div>
</section>

