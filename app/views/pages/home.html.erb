<section class="banner">
  <img src="https://images.unsplash.com/photo-1517568730816-501aae259c65?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="Banner SignUp">
</section>

<div class="language-bar">
  <p class="search-bar-infos text-para--medium">Choose your language</p>
  <div data-controller="dropdown">
    <span class="dropmic" data-dropmic="1" role="navigation" data-dropdown-target="dropdowns"     >
      <button data-dropmic-btn class="flag-image" ><img src="https://cdn-icons-png.flaticon.com/512/3013/3013911.png" id="tl-chosen_flag" width="25" height="25"></button>
      <div class="dropmic-menu" aria-hidden="true">
        <li class="dropmic-menu__listItem" role="menuitem">
          <button class="dropmic-menu__listContent" value="english" onclick="updateTargetLangFlag(this.value)" tabindex="-1"><img id="english-img" src="https://cdn-icons-png.flaticon.com/512/3013/3013911.png" width="25" height="25"> American English</button>
          <button class="dropmic-menu__listContent" value="german" onclick="updateTargetLangFlag(this.value)" tabindex="-1"><img id="german-img" src="https://cdn-icons-png.flaticon.com/512/321/321233.png" width="25" height="25"> German</button>
          <button class="dropmic-menu__listContent" value="french" onclick="updateTargetLangFlag(this.value)" tabindex="-1"><img id="french-img" src="https://cdn-icons-png.flaticon.com/512/330/330490.png" width="25" height="25"> French</button>
        </li>
      </div>
    </span>
  </div>
  <div class="sign-searchbar">
    <%= form_tag signs_path, class: "searchbar", method: :get, html: { data: {search_signs_target: 'form'}} do %>
     <%= hidden_field_tag 'language', '', id: "language_hidden_field" %>
      <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find an amazing sign"
            %>
      <button type="submit" class="search-button">
          <%= image_tag "search.png", class: "flag-image" %>
      </button>
    <% end %>
  </div>
</div>

<div class="flex-container">
  <%# <div class="menu-grid"> %>
  <div class="menu-card white-card">
    <div class="text-cards">
      <div class="text-card text-card--white">
        <div class="card-info">
          <h2 class="font-gamma">Sentences</h2>
          <p class="box-text text-para--light">Find out how to sign entire sentences instead of only focusing on your words.</p>
        </div>
      </div>
      <div class="text-card text-card--pink">
        <div class="card-info">
          <h2 class="font-gamma">Categories</h2>
          <p class="box-text text-para--light">Want to learn specifically about Animals or Food? Find them in our Catogory's section!</p>
        </div>
      </div>
      <div class="text-card text-card--blue">
        <div class="card-info">
          <h2 class="font-gamma">Fingerspelling</h2>
          <p class="box-text text-para--light">Just use the search box above and type the Alphabet you would like to search for.</p>
        </div>
      </div>
      <div class="text-card text-card--orange">
        <div class="card-info">
          <h2 class="font-gamma">Community</h2>
          <p class="box-text text-para--light">At SignUp, we have gathered suggestions of signs from different sign languages worldwide.</p>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
