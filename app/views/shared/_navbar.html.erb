<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "signup_logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto text-para--light">
      <% if user_signed_in? %>
        <li class="nav-item">
          <button link_to="home", class="nav-link", id="home-tab", onclick="updateFocus(this)">HOME</button>
        </li>
        <li class="nav-item">
          <button link_to="dashboard", class="nav-link", id="dashboard-tab", onclick="updateFocus(this)">DASHBOARD</button>
        </li>
        <li class="nav-item">
          <button link_to="lists", class="nav-link", id="lists-tab", onclick="updateFocus(this)">MY LISTS</button>
        </li>
        <li class="nav-item">
          <button link_to="favorites", class="nav-link", id="favorites-tab", onclick="updateFocus(this)">MY FAVORITES</button>
        </li>
        <li>
          <%= form_tag signs_path, class: "searchbar", id: "searchbar", method: :get, html: { data: {search_signs_target: 'form'}} do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find an amazing sign"
          %>
          <button type="submit" class="search-button">
                <%= image_tag "search.png", class: "flag-image" %>
          </button>
    <% end %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://icons-for-free.com/iconfiles/png/512/human+person+user+icon-1320196276306824343.png", class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
